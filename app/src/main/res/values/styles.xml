<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.CircularStd" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.CircularStd.Medium" parent="Base.CircularStd">
        <item name="android:fontFamily">@font/circular_std_medium</item>
    </style>

    <style name="Base.CircularStd.Bold" parent="Base.CircularStd">
        <item name="android:fontFamily">@font/circular_std_bold</item>
    </style>

    <style name="Base.CircularStd.Regular" parent="Base.CircularStd">
        <item name="android:fontFamily">@font/circular_std_regular</item>
    </style>

    <style name="Text.H1" parent="Base.CircularStd.Medium">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Text.H1.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.H2" parent="Base.CircularStd.Medium">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.H2.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.H3" parent="Base.CircularStd.Medium">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.H3.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.H4" parent="Base.CircularStd.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.H4.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.Subtitle1" parent="Base.CircularStd.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Subtitle1.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.Subtitle2" parent="Base.CircularStd.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Subtitle2.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.Body1" parent="Base.CircularStd.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body1.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.Body2" parent="Base.CircularStd.Regular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Body2.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="Text.Caption" parent="Base.CircularStd.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.ButtonText" parent="Base.CircularStd.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="Text.LinkText" parent="Base.CircularStd.Bold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="InputEditTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textAppearance">@style/Text.Subtitle1</item>
    </style>

    <style name="InputEditTextStyle.DayNight">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="InputLayoutStyle.ExposedDropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:fontFamily">@font/circular_std_medium</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="switchMinWidth">56dp</item>
        <item name="switchPadding">4dp</item>
        <item name="track">@drawable/shape_switch_track</item>
        <item name="android:thumb">@drawable/shape_switch_thumb</item>
        <item name="thumbTint">@null</item>
        <item name="trackTint">@null</item>
    </style>


    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@drawable/shape_circle</item>
        <item name="android:elevation">1dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="CustomProgressBar.Primary">
        <item name="android:backgroundTint">@color/primary_color</item>
    </style>

    <style name="CustomProgressBar.Secondary">
        <item name="android:backgroundTint">@color/secondary_color</item>
    </style>

    <style name="BaseButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonPrimary" parent="BaseButton">
        <item name="android:backgroundTint">@color/orange_light</item>
    </style>

    <style name="ButtonSecondary" parent="BaseButton">
        <item name="android:backgroundTint">@color/purple_light</item>
    </style>

    <style name="ButtonForItems" parent="BaseButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:progressBackgroundTint">@color/primary_color</item>
        <item name="android:progressTint">@color/orange_light</item>
    </style>

    <style name="RatingBarIndicator" parent="BaseRatingBar">
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:transformPivotX">0dp</item>
        <item name="android:transformPivotY">0dp</item>
    </style>

    <style name="RatingBarInput" parent="BaseRatingBar">

    </style>

    <style name="BookTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/Text.H3</item>
    </style>

</resources>